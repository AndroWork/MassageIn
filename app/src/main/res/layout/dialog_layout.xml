<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/text_dialog"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sweedish"
            android:id="@+id/text_data"
            android:padding="5dp"
            android:layout_marginBottom="1dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="32dp"
            android:padding="5dp"
            android:layout_height="32dp"
            android:src="@drawable/errorred"
            android:id="@+id/cancel_dialog"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/details_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_dialog"
        android:orientation="vertical"
        android:paddingBottom="25dp">

    <ImageView
        android:id="@+id/image_data"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sweedish"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In Sweden this massage is also called classic massage. It is a classic treatment that is based on western standards. Five techniques used in this type of massage are; stroking and gliding, kneading, rubbing, tapping or pounding, and vibrating. These are the things that come to mind when you think about Swedish classic massage."
        android:lineSpacingExtra="5dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingTop="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:id="@+id/details_data"
        android:layout_marginBottom="1dp"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@android:color/white"/>


        <Button
            android:id="@+id/booking"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Book Now"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            />
    </LinearLayout>



